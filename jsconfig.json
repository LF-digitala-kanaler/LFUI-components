{
	"compilerOptions": {
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2020", "DOM", "DOM.Iterable"],
		"types": ["vite/client", "preact"],
		"moduleResolution": "node",
		"module": "es2022",
		"noImplicitAny": false,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2020",
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"resolveJsonModule": true
	},
	"exclude": ["node_modules", "dist", "static", "src/docs", "public", "storybook-static"]
}
